{% extends "base.html.twig" %}

{% block body %}

  <section class="bg-secondary">
    <div class="container py-5">
    <div class="row">
          <div class="col-12">
            <h3 class="text-center text-white">Les catégories</h3>
          </div>  

          {% for category in categories %}

              <div class="col-sm-12 col-md-6 col-lg-4 mt-3">

                  <div class="card">
                      <img src="{{ category.imagePath }}" class="img-fluid rounded-start" alt="image_category">
                      <div class="card-body">
                          <h5 class="card-title">{{ category.name }}</h5>
                          <a href="{{ path('boutique_product_show_by_category',{'id': category.id}) }}" class="btn btn-primary w-100">Consulter</a>
                      </div>
                  </div>
          
              </div>
              
          {% endfor %}

      </div>
    </div>
  </section>

  <section>
  <div class="container py-5">
      <div class="row">
        <div class="col-12">
          <h3 class="text-center">Les nouveautés</h3>
        </div>  

        {% for product in products %}

            <div class="col-sm-12 col-md-6 col-lg-4 mt-3">

                <div class="card">
                    <img src="{{ product.imagePath }}" class="card-img-top imageCard" alt="image_category">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p>{{ product.price | priceEuro }}</p>
                        <a href="{{ path('boutique_product_detail',{'id': product.id} ) }}" class="btn btn-primary w-100">Consulter</a>
                    </div>
                </div>
        
            </div>
            
        {% endfor %}

    </div>
     </div>
  </section>
   


{% endblock %}